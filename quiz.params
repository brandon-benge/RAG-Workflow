[build]
enabled=true
persist=.chroma
chunk_size=800
chunk_overlap=120
model=sentence-transformers/all-MiniLM-L6-v2
bundle_url=https://github.com/brandon-benge/InterviewPrep/releases/download/latest/pdfs-bundle.tar.gz
local=true
openai=false
force=true

[prepare]
provider=ollama
model=mistral
count=5
quiz=quiz.json
answers=answer_key.json
rag_persist=.chroma
rag_k=5
avoid_recent_window=5
verify=true
rag_local=true
rag_openai=false
dump_llm_payload=none
dump_llm_response=llm_response.json

[export]
quiz=quiz.json
out=quiz.txt

[parse]
in=quiz_marked.txt
answers=answer_key.json
quiz=quiz.json
out=parsed.json

[validate]
quiz=quiz.json
answers=answer_key.json